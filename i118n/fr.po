#. module: account_invoice_donation_fiscal_receipt
#: model:mail.template,subject:account_invoice_donation_fiscal_receipt.email_template_send_fiscal_receipt
msgid "{{object.company_id.name}} fiscal receipt; donation on {{object.invoice_date or 'n/a'}}"
msgstr "Reçu fiscal de {{ object.company_id.name }} - don du {{ object.invoice_date or 'n/a' }}"

#: model:mail.template,report_name:account_invoice_donation_fiscal_receipt.email_template_send_fiscal_receipt
msgid "{{object.company_id.name}}_fiscal_receipt_{{(object.invoice_date or 'n_a').replace('/', '_')}}"
msgstr "{{object.company_id.name}}_recu_fiscal_{{(object.invoice_date or 'n_a').replace('/', '_')}}"

#: model:mail.template,body_html:account_invoice_donation_fiscal_receipt.email_template_send_fiscal_receipt
msgid ""
"<div style="margin: 0px; padding: 0px;">\n"
"    <p style="font-size: 13px;">\n"
"      Dear\n"
"      <t t-if="object.partner_id.parent_id">\n"
"        <t t-out="object.partner_id.name or ''">nom</t> (<t t-out="object.partner_id.parent_id.name or ''">Azure Interior</t>),\n"
"      </t>\n"
"      <t t-else="">\n"
"        <t t-out="object.partner_id.name or ''"/>,\n"
"      </t>\n"
"      <br/><br/>\n"
"      Here is your\n"
"      <t t-if="object.name">\n"
"        fiscal receipt for your donation on <span style="font-weight:bold;" t-out="object.invoice_date or ''">date</span>\n"
"      </t>\n"
"      <t t-else="">fiscal receipt</t>\n"
"      <t t-if="object.invoice_origin">(ref: <t t-out="object.invoice_origin or ''">invoice origin </t>)</t>\n"
"      amounting to <span style="font-weight:bold;" t-out="format_amount(object.amount_total, object.currency_id) or ''"/>\n"
"      from <t t-out="object.company_id.name or ''">company name</t>\n"
"      <t t-if="object.payment_state in ('paid', 'in_payment')"> This donation is already paid.</t>\n"
"      <t t-else="">\n"
"        Please remit payment at your earliest convenience.\n"
"        <t t-if="object.payment_reference">\n"
"          <br/><br/>Payment ref: <span style="font-weight:bold;" t-out="object.payment_reference or ''"/>.\n"
"        </t>\n"
"      </t>\n"
"      <br/><br/>Thank you again for supporting us.\n"
"      <t t-if="not is_html_empty(object.invoice_user_id.signature)">\n"
"        <br/><br/><t t-out="object.invoice_user_id.signature or ''">Signature admin</t>\n"
"      </t>\n"
"    </p>\n"
"</div>"
msgstr ""
"<div style="margin: 0px; padding: 0px;">\n"
"    <p style="font-size: 13px;">\n"
"      Cher\n"
"      <t t-if="object.partner_id.parent_id">\n"
"        <t t-out="object.partner_id.name or ''">nom donateur</t> (<t t-out="object.partner_id.parent_id.name or ''">société donateur</t>),\n"
"      </t>\n"
"      <t t-else="">\n"
"        <t t-out="object.partner_id.name or ''">nom</t>,\n"
"      </t>\n"
"      <br/><br/>\n"
"      Veuillez trouver ci-joint votre\n"
"      <t t-if="object.name">\n"
"        reçu fiscal pour votre don du <span style="font-weight:bold;" t-out="object.invoice_date or ''"/>\n"
"      </t>\n"
"      <t t-else="">reçu fiscal</t>\n"
"      <t t-if="object.invoice_origin">(avec référence : <t t-out="object.invoice_origin or ''"/>)</t>\n"
"      d'un montant de <span style="font-weight:bold;" t-out="format_amount(object.amount_total, object.currency_id) or ''"/>.\n"
"      <t t-if="object.payment_state in ('paid', 'in_payment')">\n"
"        Nous avons reçu le paiement de ce don dans sa totalité.\n"
"      </t>\n"
"      <t t-else="">\n"
"        Sauf erreur de notre part, nous n'avons pas encore reçu le paiement.\n"
"        <t t-if="object.payment_reference">\n"
"          <br/><br/>Merci d'utiliser la référence suivante : <span style="font-weight:bold;" t-out="object.payment_reference or ''"/>.\n"
"        </t>\n"
"      </t>\n"
"      <br/><br/>Merci de tout cœur pour votre soutien.\n"
"      <t t-if="not is_html_empty(object.invoice_user_id.signature)">\n"
"        <br/><br/><t t-out="object.invoice_user_id.signature or ''">Signature admin</t>\n"
"      </t>\n"
"    </p>\n"
"</div>"