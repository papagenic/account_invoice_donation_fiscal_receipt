<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_res_config_settings_donation_fiscal_year" model="ir.ui.view">
    <field name="name">res.config.settings.donation.fiscal.year</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='use_invoice_terms']" position="after">
        <div class="col-12 col-lg-6 o_setting_box" id="donation_fiscal_year_box">
          <div class="o_setting_right_pane">
            <label for="donation_fiscal_year"/>
            <div class="text-muted">
              Fiscal year used for generating the annual donation report.
            </div>
            <div class="mt16">
              <field name="donation_fiscal_year" placeholder="e.g. 2024"/>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>

